<div class="container-fluid">
    <section>
        <div class="row">
            <div class="title offset-3 col-6 offset-md-3 col-md-6 offset-lg-3 col-lg-6">
                {{!-- <h1>Eat Da Burger</h1> --}}
            </div>
        </div>
    </section>
</div>

<div class="container-fluid">
    <div class="row">
        {{!-- offset-1 offset-sm-1 offset-md-1 offset-lg-1 offset-xl-1 --}}
        <div class="col-7 col-sm-7 col-md-7 col-lg-7 col-xl-7">
            <h4>-Open Orders-</h4>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/button-block hungry=true}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <h4>-Completed Orders-</h4>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger/devoured-block hungry=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<br>
<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-5 col-sm-5 col-md-5 col-lg-5 col-xl-5">
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger">
                        <h3>Enter the burger you want to order then Click the "Order" button:</h3>
                    </label>
                    <input type="text" class="form-control" id="newBurgerName" name="newBurger">
                </div>

                <button type="submit" class="btn btn-primary">Order</button>
            </form>
        </div>
    </div>
</div>
